<!--ヘッダー-->
<!DOCTYPE html>
<html>
  <head>
    <title>Intotheworld</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
    <% if user_signed_in? %>
    <ul class="navbar-nav ml-auto">
      <li class="mx-3 my-5">
        <%= link_to '投稿フォーム', new_trip_path, class: "btn btn-outline-info" %>
      </li>
      <li class="mx-3 my-5">
      <%= link_to 'マイページ', user_path(current_user.id), class: "btn btn-outline-info" %>
      </li>
      <li class="mx-3 my-5">
        <%= link_to '投稿一覧', trips_path, class: "btn btn-outline-info" %>
      </li>
      <li class="mx-3 my-5">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-info" %>
      </li>
    </ul>
    <% elsif admin_signed_in? %>
    <ul class="navbar-nav ml-auto">
      <li class="mx-3 my-5">
        <%= link_to "ユーザー一覧", admin_users_path, class: "btn btn-outline-info" %>
      </li>
      <li class="mx-3 my-5">
        <%= link_to "レビュー一覧", admin_trips_path, class: "btn btn-outline-info" %>
      </li>
      <li class="mx-3 my-5">
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-info" %>
      </li>
    </ul>
    <% else %>
    <ul class="navbar-nav ml-auto">
      <li class="mx-3 my-5">
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-info" %>
      </li>
      <li class="mx-3 my-5">
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-info" %>
      </li>
      <li class="mx-3 my-5">
        <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "btn btn-outline-info" %>
      </li>
    </ul>
    <% end %>
    </div>
    </nav>
    </header>
    <%= yield %>
  </body>
</html>
