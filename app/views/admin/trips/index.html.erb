<!--管理者側レビュー一覧画面-->
<div class="container">
  <h2 class="mt-3 mb-4">投稿一覧</h2>

  <!--投稿繰り返し処理-->
  <div class="row">
    <% @trips.each do |trip| %>
    <div class="col-6">
      <%= link_to admin_trip_path(trip.id) do %>
        <%= image_tag trip.image, size: "550x300" %>
      <% end %>
    　   <p><%= trip.user.name %></p>
        <p><%= trip.title %></p>
        <p><%= trip.body %></p>
    </div>
    <% end %>
  </div>
</div>