<!--管理者側ユーザー一覧画面-->
<div class="container text-center mt-3">
  <div class="row">
    <div class="col-4 pl-5 mb-4">
      <h3 class="mx-5">ユーザー一覧</h3>
    </div>
  </div>
    <div class="row justify-content-center">
      <div class ="col-sm-9">
        <table class="table table-hover">
          <thead>
            <tr class="active">
              <th class="col-2">ユーザーID</th>
              <th>名前</th>
              <th>メールアドレス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= user.id %>
              </td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <% if user.is_deleted %>
                  <%= link_to "再開", admin_withdraw_path(user), method: :patch, data: { confirm: "本当に再開しますか？" }, class: "btn btn-outline-success btn-block" %>
                <% else %>
                  <%= link_to "削除する", admin_withdraw_path(user), method: :patch, data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-danger btn-block" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      <%= paginate @users %>
    </div>
  </div>
</div>