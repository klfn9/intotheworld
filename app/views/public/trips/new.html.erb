<div class="container">
  <div class="row">
    <div class="col ml-4">
      <h2>投稿フォーム</h2>
    </div>
  </div>

  <div class="row ml-5">
    <!--投稿フォーム-->
      <%= form_with model: @trip do |f| %>
    <div class="col mt-4 mb-3">
      <h5 class="mb-3">画像</h5>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="row ml-5">
    <div class="col mb-3">
      <h5 class="mb-3">題名</h5>
      <%= f.text_field :title, size: 40 %>
    </div>
  </div>

  <!-- 評価 -->
  <div class="form-group row ml-1" id="star">
    <%= f.label :star,'おすすめ度', class:'col-md-2 ml-5 col-form-label' %>
    <%= f.hidden_field :star, id: :review_star %>
  </div>


  <!--タグチェック-->
  <div class="row ml-5 mb-3 mt-4">
    <div class="col"><span>タグ:</span>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        <%= tag.label do %>
          <%#= tag.check_box %>
          <%= tag.text %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row ml-5">
    <div class="col">
    <h5 class="mb-3">本文</h5>
      <%= f.text_area :body, size: "62x5" %>
      <%= f.submit '投稿', class: "btn btn-outline-secondary" %>
    </div>
  </div>
  <% end %>
</div>


