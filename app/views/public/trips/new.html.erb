<div class="container">
  <div class="row">
    <div class="col ml-4">
      <h2>投稿フォーム</h2>
    </div>
  </div>
  <div class="row ml-5">
    <!--投稿フォーム-->
      <%= form_with model: @trip do |f| %>
    <div class="col mt-4 mb-3">
      <h5 class="mb-3">画像</h5>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  <div class="row ml-5">
    <div class="col mb-3">
      <h5 class="mb-3">題名</h5>
      <%= f.text_field :title, size: 40 %>
    </div>
  </div>
  <div class="row ml-5">
    <div class="col">
    <h5 class="mb-3">本文</h5>
      <%= f.text_area :body, size: "62x5" %>
      <%= f.submit '投稿', class: "btn btn-outline-secondary" %>
    </div>
  </div>
  <% end %>
</div>