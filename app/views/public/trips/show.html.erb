<div class="container">
  <div class="row ml-5 mt-4">
    <%= image_tag @trip.image, size: "630x350" %>
  </div>
    <div class="row ml-5 mt-3">
      <h3><%= @trip.title %></h3>
    </div>
    <div class="row ml-5 mt-3">
      <div class="col-10 ml-1">
        <h6><%= @trip.body %></h6>
      </div>
    </div>
    <div class="row ml-5 mt-4">
      ユーザー: <%= @trip.user.name %>
    </div>
    <div class="row ml-5">
      <%= @trip.created_at.strftime('%Y/%m/%d') %>
    </div>
    <div class="row ml-5 mt-2">
      <%= link_to "編集", edit_trip_path(@trip.id) %> |
      <%= link_to "削除", trip_path(@trip.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>
    
    <!--星評価表示-->
    <div id="star-rate<%= @trip.id%>"></td>
             <script>
              $('#star-rate<%= @trip.id %>').empty();
              $('#star-rate<%= @trip.id%>').raty({
                 size      : 36,
                 starOff   : '<%= asset_path('star-off.png') %>',
                 starOn    : '<%= asset_path('star-on.png') %>',
                 half      : true,
                 readOnly: true,
                 score: <%= @trip.star %>,
               });
             </script>
    </div>

    <!--コメント機能-->
    <div class="row ml-4 mt-4">
      <% @trip.trip_comments.each do |trip_comment| %>
    <div class="col-4 ml-2">
      <%= trip_comment.user.name %>
      <%= trip_comment.created_at.strftime('%Y/%m/%d') %> <%= trip_comment.comment %>
    <% if trip_comment.user == current_user %>
      <%= link_to "削除", trip_trip_comment_path(trip_comment.trip, trip_comment), method: :delete, data: { confirm: "本当に削除しますか？" } %>
    </div>
    <% end %>
  <% end %>
</div>
<div class="row ml-5 mt-3">
  <%= form_with model: [@trip, @trip_comment] do |f| %>
    <%= f.text_area :comment, placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
  </div>
</div>