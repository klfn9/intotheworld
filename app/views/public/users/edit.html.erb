<!--ユーザー編集-->
<div class="container">
  <div class="row">
    <div class="col-sm mb-3">
      <h3>ユーザー編集</h3>
    </div>
  </div>
  <div class="row">
    <!--編集フォーム-->
      <%= form_with model: @user do |f| %>
    <div class="col-sm pl-0 my-3">
      <label>Name</label>
      <%= f.text_field :name, class: "ml-5" %>
    </div>
    <div class="row">
      <div class="col-sm">
        <label>Profile Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "ml-1" %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm"></div>
      <div class="col-sm ml-0 pl-0 mt-3">
        <%= f.submit "変更を保存", class: "btn btn-outline-success" %>
      </div>
    </div>
    <% end %>
  </div>
</div>