<!--ユーザー編集-->
<div class="container text-center">
  <div class="row">
    <div class="col-sm mb-3 mt-5">
      <h3>プロフィール編集</h3>
    </div>
  </div>
  <div class="row justify-content-center">
    <!--編集フォーム-->
    <%= form_with model: @user do |f| %>
      <div class="col-sm pl-1 my-3">
        <label>Name</label>
          <%= f.text_field :name %>
      </div>
      <div class="row">
        <div class="col-sm ml-3">
          <label>Profile Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "ml-1" %>
        </div>
      </div>
      <div class="row">
      <!--<div class="col-sm-5"></div>-->
        <div class="col-sm ml-2 mt-3">
           <%= f.submit "変更を保存", class: "btn btn-outline-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>