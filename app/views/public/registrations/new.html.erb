<!--ユーザー側 新規登録ページ-->
<div class="container text-center">

  <h2 class="text-center mx-auto mt-5">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field mx-auto my-4">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field mx-auto mt-4 mb-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mx-auto mt-4">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field mx-auto my-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions  mb-2">
    <%= f.submit "新規登録", class: " btn btn-outline-info" %>
  </div>
<% end %>

  <!--<div class="row ml-5">-->
  <!--  <%#= render "public/shared/links" %>-->
  <!--</div>-->
</div>